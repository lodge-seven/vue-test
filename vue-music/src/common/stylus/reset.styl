html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, em, img, i, dl, dt, dd, ol, ul, li, 
table, caption, tbody, tfoot, thead, tr, th, td,
input 
  margin: 0
  padding: 0
  border: 0
  font-size: 100%
  font-weight: normal
  vertical-align: baseline

body
  line-height: 1

table
  border-collapse: collapse
  border-spacing: 0

a
  color: #7e8c8d
  text-decoration: none

li
  list-style: none

body
  -webkit-text-size-adjust: none
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)